<html>
    <head>
<title>
    <%= title %>
</title>
<script src="https://kit.fontawesome.com/b9e087519b.js" crossorigin="anonymous"></script>
<!-- Our css file link should be below so we can override it-->
<link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
          <i class="fas fa-address-book"></i>
            Contacts List !
             </h1>
<div id="contacts-list-container">
     <ul>
      <% for (let i of contact_list) { %>
        <li class="contact">
          <div class="details">
            <p><%= i.name  %></p>
            <p><%= i.phone %></p>
          </div>
          <div class="delete-button">
            <!-- <a href="/delete-contact/?phone=<%= i.phone %>"> -->
              
              <a href="/delete-contact/?id=<%= i._id %>">
                <i class="fas fa-window-close"></i>
            </a>
          </div>
        </li>
      <% } %>
           <form id="new-contact-form" action="/create-contact" method="POST">
        <input  type="text" name="name" placeholder="Enter name" required>
        <input  type="number" name="phone" placeholder="enter phone no" required>
        <button type="submit" style="background-color: blue;">Click To Add</button>
            </form>
     </ul>
</div>
        <script type="text/javasxript" src="/js/home.js"></script>
    </body>
</html>